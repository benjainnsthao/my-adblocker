{
  "manifest_version": 3,
  "name": "My Adblocker",
  "version": "1.0.0",
  "description": "A Manifest V3 ad blocker with network rules and cosmetic filtering.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ads",
        "enabled": true,
        "path": "rules/ads.json"
      },
      {
        "id": "tracking",
        "enabled": true,
        "path": "rules/tracking.json"
      },
      {
        "id": "annoyances",
        "enabled": true,
        "path": "rules/annoyances.json"
      },
      {
        "id": "surrogates",
        "enabled": true,
        "path": "rules/surrogates.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "My Adblocker",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "surrogates/forbes-adblock.v1.js",
        "surrogates/sourceforge-adblock.v1.js"
      ],
      "matches": [
        "*://forbes.com/*",
        "*://*.forbes.com/*",
        "*://sourceforge.net/*",
        "*://*.sourceforge.net/*"
      ],
      "use_dynamic_url": true
    }
  ]
}
